{
 "name":"GATK 3.5 HaplotypeCaller (CRAM to GVCF) single node",
 "components":{
  "gatk-haplotypecaller-cram-gvcf":{
   "script":"gatk-haplotypecaller-cram.py",
   "script_version":"master",
   "repository":"jr17/hgi",
   "script_parameters":{
    "reference_collection":{
     "required":true,
     "dataclass":"Collection"
    },
    "inputs_collection":{
     "required":true,
     "dataclass":"Collection"
    },
    "interval_lists_collection":{
     "required":true,
     "dataclass":"Collection"
    },
    "ploidy":{
     "required":false,
     "dataclass":"number",
     "default":2,
     "description":"Ploidy to use for HaplotypeCaller."
    }
   },
   "runtime_constraints":{
    "docker_image":"mercury/gatk-3.5",
    "min_nodes":1,
    "max_tasks_per_node":10,
    "keep_cache_mb_per_task":1280
   }
  }
 },
 "description":"GATK 3.5 HaplotypeCaller (CRAM to gVCF) on a single node"
}
